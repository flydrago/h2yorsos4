package com.h2y.os.dao.read;



import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Component;

import com.h2y.os.entity.Coupons;
import com.h2y.os.entity.SysUnits;

/**
 * CouponsDaoInterface,order CRUD ;CRUD:Create,Retrieve/Read,Update,Delete
 * @author hwttnet
 * version:1.2
 * time:2015-07-03
 * email:info@hwttnet.com
 */
@Component
public interface ICouponsDaoR{

	/**
	 * get
	 * @return
	 */
	public Coupons get(long id);

	/**
	 * 获取优惠券列表
	 * @param map
	 * @return
	 */
	public List<Map<String,Object>> getMyCouponsList(Map<String,Object> map);

	/**
	 * 获取待领取优惠券列表
	 * @param map
	 * @return
	 */
	public List<Map<String,Object>> getUnclaimedCouponsList(Map<String,Object> map);

	/**
	 * 获取待领取优惠券数量
	 * @param map
	 * @return
	 */
	public Map<String,Object> getUnclaimedCouponsCount(Map<String,Object> map);


	/**
	 * 获取批量领取优惠券列表包括：订单满赠、注册、推荐好友
	 * @param map
	 * @return
	 */
	public List<Map<String,Object>> getBatchCouponsList(Map<String,Object> map);


	/**
	 * 获取优惠券详细
	 * @param couponsId
	 * @return
	 */
	public Map<String,Object> getCouponsDetail(long couponsId);



	/**
	 * 获取优惠券
	 * @param couponsId
	 * @return
	 */
	public Map<String,Object> getCoupons(Map<String,Object> map);

	/**
	 * 根据来源编码获取 优惠券来源
	 * @param map
	 * @return
	 */
	public List<Map<String,Object>> getCouponsBySourceCode(Map<String,Object> map);

	/**
	 * 获取优惠券可用商品列表 
	 * @param map
	 * {unitId:单位Id，
	 * unitType:单位类型（0：区域代理、1：旗舰店、3：其他），
	 * goodsTypeId:商品类型Id（null时，不做判断），
	 * keyWord:关键字 模糊查询，
	 * sortname:排序字段，
	 * sortorder:排序方式，
	 * page:页码，
	 * pagesize:页显示最大记录数}
	 * @return
	 */
	public List<Map<String,Object>> getAvailableGoodsListMap(Map<String,Object> map);


	/**
	 * 根据区域编码和单位类型得到单位列表
	 * @param map
	 * {zoneCode:区域编码,
	 * unitType:单位类型（0：区域代理、1：旗舰店、3：其他）}
	 * @return
	 */
	public List<SysUnits> getListByZoneCodeAndUnitType(Map<String,Object> map);



	/**
	 * 获取当前用户已领取优惠券列表id
	 * @param account
	 * @return
	 */
	public List<Long> getMyClaimedIdList(Map<String,Object> map);


	/**
	 * 获取海报选中优惠券列表
	 * @param map
	 * @return
	 */
	public List<Map<String,Object>> getPosterCouponsList(Map<String,Object> map);


	/**
	 * 获取当前用户已领取海报优惠券列表id
	 * @param map
	 * @return
	 */
	public List<Long> getMyPosterClaimedIdList(Map<String,Object> map);


}